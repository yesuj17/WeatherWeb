<div style="height: 100%; width:100%" class="container">
  <div style="height: 30%; background-color:#FFFFCC">       
    <h6>summary</h6>
  </div>
  <div class="row" style="float: right; width: 100%; background-color:#FCC">    
    <a href="#" ng-click="dashVM.pmsShowPMSMainModal()" data-backdrop="static">PMS Configuration</a>
  </div>    
  <div class="row">
    <div id="ID_PMS_dashCalendar" style="max-width: 900px; margin: 0 auto">       </div>
  </div>
</div>

<!-- PMS Configuration Main Modal -->
<% include ./pms/pms_main_layout.ejs %>    

<!-- GroupEventList Modal -->
<div class="modal fade" id="ID_PMS_dashCalendarGroupEventListModal" role="dialog">
  <div style="display: table; height: 100%; width: 100%; pointer-events:none">
    <div class="modal-dialog modal-lg" style="display: table-cell; vertical-align: middle; pointer-events:none">
      <div class="modal-content" style="width: inherit; height: inherit; margin: 0 auto; pointer-events: all">

        <div class="modal-header">
          <div style="float: right">
            <i class="fa fa-times-circle fa-2x" aria-hidden="true" data-dismiss="modal"></i>
          </div>
          <h4 class="modal-title">
            <span id="ID_PMS_dashCalendarGroupEventListTitle"></span>
            <input type="hidden" id="ID_PMS_dashSelectedEventGroupType" />
            <input type="hidden" id="ID_PMS_dashSelectedDate" />
          </h4>
        </div>

        <div class="modal-body" style="display:table; margin: 0px; width: 100%;">
          <div style="margin: 0px;">
            <table class="table">
              <thead>
                <tr>                  
                  <th style="text-align: center"><%=__('S_PMS_EventDetailTableColCode') %></th>
                  <th style="text-align: center"><%=__('S_PMS_EventDetailTableColTitle') %></th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="info in dashVM.pmsEventList">
                  <td style="text-align: center">
                    <span class="text-info">{{info.Code}}</span>                    
                  </td>
                  <td style="text-align: center">
                    <span class="text-info">{{info.Title}}</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>     
        
      </div>
    </div>
  </div>
</div>

<!-- Memo Information Modal -->
<div class="modal fade" id="ID_PMS_dashCalendarMemoInfoModal" role="dialog">
  <div style="display: table; height: 100%; width: 100%; pointer-events:none">
    <div class="modal-dialog modal-lg" style="display: table-cell; vertical-align: middle; pointer-events:none">
      <div class="modal-content" style="width: inherit; height: inherit; margin: 0 auto; pointer-events: all">

        <div class="modal-header">
          <div style="float: right">
            <i class="fa fa-times-circle fa-2x" aria-hidden="true" data-dismiss="modal"></i>
          </div>
          <h4 class="modal-title">
            <span class="text-info" ng-model="dashVM.pmsMemoList.Date"></span>
          </h4>
        </div>

        <div class="modal-body" style="display:table; margin: 0px; width: 100%;">
          <div style="margin: 0px;">
            <table class="table">
              <thead>
                <tr>                  
                  <th style="text-align: center">
                    <%=__('S_PMS_MemoTableColTimeStamp') %>
                  </th>
                  <th style="text-align: center">
                    <%=__('S_PMS_MemoTableColTimeUser') %>
                    </th>
                  <th style="text-align: center">
                    <%=__('S_PMS_MemoTableColTimeTaskCode') %>
                  </th>
                  <th style="text-align: center">
                    <%=__('S_PMS_MemoTableColTimeTaskMemo') %>
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="info in dashVM.pmsMemoList.Infos">
                  <td style="text-align: center">
                    <span class="text-info">{{info.TimeStamp}}</span>
                  </td>
                  <td style="text-align: center">
                    <span class="text-info">{{info.User}}</span>
                  </td>                  
                  <td style="text-align: center">
                    <span class="text-info">{{info.Code}}</span>
                  </td>
                  <td style="text-align: center">
                    <span class="text-info">{{info.Memo}}</span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
                
      </div>
    </div>
  </div>
</div>