<div ng-app="pmsConfMachineMaintItemApp" ng-controller="PMSConfMachineMaintItemController as pmsConfMachineMaintItemVM" class="container">
  <div class="container-fluid" style="width:100%; height:100%;">
    <div style="width:12%; height:100%; float:left;">
      <table class="table">
        <thead>
          <tr>
            <th style="text-align: left">
              Stacker Crane
            </th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="info in pmsConfMachineMaintItemVM.SCMachineList">
            <td style="text-align: right;">
              <a href="#" ng-click="pmsConfMachineMaintItemVM.LoadMachineItemList(1, info.ID)">
                <span class="text-info">{{info.Name}}</span>
              </a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div style="width:5%; height:100%; float:left;">
    </div>
    <div style="width:83%; height:100%; float:right;">
      
      <div class="row" style="margin: auto; min-height: 600px">
        <table class="table">
          <thead>
            <tr>
              <th style="text-align: center">
                No
              </th>
              <th style="text-align: center">
                점검코드
              </th>
              <th style="text-align: center">
                점검명
              </th>
              <th style="text-align: center">
                점검레벨
              </th>
            </tr>
          </thead>
          <tbody>
            <tr ng-repeat="info in pmsConfMachineMaintItemVM.MachineItemList">
              <td style="text-align: center;">
                <span class="text-info">{{$index+1}}</span>
              </td>
              <td style="text-align: center;">
                <span class="text-info">{{info.Code}}</span>
              </td>
              <td style="text-align: center;">
                <span class="text-info">{{info.Title}}</span>
              </td>
              <td style="text-align: center;">
                <span class="text-info">{{info.Level}}</span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="row" style="margin: auto">
        <br></br>
      </div>
      <div class="row" style="margin: auto">
        <div style="float: right">
          <button type="button" class="btn btn-primary btn-nm" ng-click="">
            전체 설비에 적용
          </button>
        </div>
        <div style="float: right">
          &nbsp;&nbsp;
        </div>
        <div style="float: right">
          <button type="button" class="btn btn-primary btn-nm" ng-click="pmsConfMachineMaintItemVM.ShowMaintItemManageView()">
            점검 항목 수정
          </button>
        </div>                
      </div>           
    </div>
    
  </div>


  <!-- Machine Maint Item Management Modal Start -->
  <div class="modal fade" id="ID_PMS_MachineMaintItemManageModal" role="dialog">
    <div style="display: table; height: 100%; width: 100%; pointer-events:none">
      <div class="modal-dialog modal-lg" style="display: table-cell; vertical-align: middle; pointer-events:none">
        <div class="modal-content" style="width: 1200px; height: inherit; margin: 0 auto; pointer-events: all">

          <div class="modal-header">
            <div style="float: right">
              <i class="fa fa-times-circle fa-2x" aria-hidden="true" ng-click="pmsConfMachineMaintItemVM.CloseMaintItemManageView()"></i>
            </div>
            <h4 class="modal-title">
              장비별 점검 항목
            </h4>
          </div>

          <div class="modal-body" style="display:table; width: 100%;">
            <div style="margin: 20px;">
              <div class="row">
                <div style="float: left; width:45%">
                  <h3>점검항목</h3>
                  <table class="table">
                    <thread>
                      <tr>
                        <th style="text-align: center">#</th>
                        <th style="text-align: center">점검코드</th>
                        <th style="text-align: center">점검레벨</th>
                        <th style="text-align: center">점검명</th>
                      </tr>
                    </thread>
                    <tbody>
                      <tr ng-repeat="item in pmsConfMachineMaintItemVM.ModalMaintItemList">
                        <td style="text-align: center;">
                          <input type="checkbox" ng-attr-id="{{'ID_PMS_MaintItemCheckUID-'+item.UID}}" ng-disabled="item.isExistinMachineItem === true"/>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Code}}</span>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Level}}</span>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Title}}</span>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>

                <div style="float: left; width:10%">
                  <div style="display: table; height: 100%; width:100%">
                    <div style="display: table-cell; vertical-align: middle;">
                      <center>
                        <button type="button" class="btn btn-primary btn-nm" ng-click="pmsConfMachineMaintItemVM.AddMaintItemtoMachine()">
                          >>
                        </button>
                      </center>
                    </div>
                  </div>
                </div>

                <div style="float: right; width:45%">
                  <h3>설비별 항목</h3>
                  <table class="table">
                    <thread>
                      <tr>
                        <th style="text-align: center">#</th>
                        <th style="text-align: center">점검코드</th>
                        <th style="text-align: center">점검레벨</th>
                        <th style="text-align: center">점검명</th>
                      </tr>
                    </thread>
                    <tbody>
                      <tr ng-repeat="item in pmsConfMachineMaintItemVM.ModalMachineItemList">
                        <td style="text-align: center;">
                          <input type="checkbox" ng-attr-id="{{'ID_PMS_ModalMachineMaintItemCheckUID-'+item.UID}}" value=""/>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Code}}</span>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Level}}</span>
                        </td>
                        <td style="text-align: center;">
                          <span class="text-info">{{item.Title}}</span>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
              <div class="row">
                <br></br>
                <br></br>
              </div>
              <div class="row">
                <div style="float: right">
                  <button type="button" class="btn btn-primary btn-nm" ng-click="pmsConfMachineMaintItemVM.CloseMaintItemManageView()">
                    닫기
                  </button>
                </div>
                <div style="float: right">
                  &nbsp;&nbsp;
                </div>
                <div style="float: right">
                  <button type="button" class="btn btn-primary btn-nm" ng-click="pmsConfMachineMaintItemVM.RemoveMachineMaintItem()">
                    삭제
                  </button>
                </div>                
                <div style="float: right">
                  &nbsp;&nbsp;
                </div>
                <div style="float: right">
                  <button type="button" class="btn btn-primary btn-nm" ng-click="pmsConfMachineMaintItemVM.SaveMachineMaintItem()">
                    저장
                  </button>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
 <!-- Machine Maint Item Management Modal End -->
      
      
</div>
  
<!-- pmsConfMachineMaintItemController.js start-->
<script>
  <% include ./pmsConfMachineMaintItemController.js %>
</script>
<!-- pmsConfMachineMaintItemController.js start-->